~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

include { MAIN } from './workflows/main'

//
// WORKFLOW: Run main nf-core/main analysis pipeline
//
workflow NFCORE_MAIN {
    MAIN ()
}

